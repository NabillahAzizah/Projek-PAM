<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Curve Purple Background -->
    <ImageView
        android:id="@+id/iv_curve_background"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_above="@+id/date_selector"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="21dp"
        android:scaleType="fitXY"
        android:src="@drawable/bookzone_purple_curve" />

    <!-- Header -->
    <RelativeLayout
        android:id="@+id/header_layout"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="40dp"
        android:paddingHorizontal="20dp"
        android:translationZ="2dp">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_arrow_back_white"
            android:layout_alignParentStart="true"
            android:clickable="true"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:padding="12dp"
            android:contentDescription="@string/back_button" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Booking Zone"
            android:textColor="@android:color/white"
            android:textSize="35sp"
            android:textStyle="bold" />

    </RelativeLayout>

    <!-- Play Station Card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/playstation_card"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@id/header_layout"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="20dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp">

        <RelativeLayout
            android:id="@+id/card_background"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@drawable/orange_gradient_bg"
            android:padding="20dp">

            <ImageView
                android:id="@+id/iv_controller"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_alignParentStart="true"
                android:layout_marginStart="15dp"
                android:src="@drawable/ic_playstat" />

            <TextView
                android:id="@+id/tv_playstation_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="30dp"
                android:layout_toEndOf="@id/iv_controller"
                android:text="Play Station 1"
                android:textColor="@android:color/white"
                android:textSize="24sp"
                android:textStyle="bold" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <!-- Date Selector -->
    <LinearLayout
        android:id="@+id/date_selector"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/playstation_card"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_prev_date"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginEnd="10dp"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:padding="4dp"
            android:src="@drawable/ic_chevron_left" />

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_weight="1"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            app:cardCornerRadius="8dp"
            app:cardElevation="2sp">

            <TextView
                android:id="@+id/tv_selected_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:clickable="true"
                android:focusable="true"
                android:padding="12dp"
                android:text="Monday, 9/29/2025"
                android:textAlignment="center"
                android:textColor="@color/purple_primary"
                android:textSize="16sp"
                android:textStyle="bold" />

        </androidx.cardview.widget.CardView>

        <ImageView
            android:id="@+id/iv_next_date"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginStart="10dp"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:padding="4dp"
            android:src="@drawable/ic_chevron_right" />

    </LinearLayout>

    <!-- Session Text -->
    <TextView
        android:id="@+id/tv_choose_session"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/date_selector"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:text="Choose your session"
        android:textColor="@color/gray_light"
        android:textSize="14sp"
        android:alpha="0.9" />

    <!-- Time Slots RecyclerView -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_time_slots"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_below="@id/tv_choose_session"
        android:layout_above="@id/bottom_navigation"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="10dp"
        android:clipToPadding="false"
        android:paddingTop="5dp"
        android:paddingBottom="5dp" />

    <!-- Loading indicator (initially hidden) -->
    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone"
        android:indeterminateTint="@android:color/white" />

    <!-- Empty state for time slots -->
    <LinearLayout
        android:id="@+id/empty_time_slots"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:gravity="center"
        android:visibility="gone">

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/ic_schedule"
            android:alpha="0.5"
            app:tint="@android:color/white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="No available time slots"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:alpha="0.7" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="for selected date"
            android:textColor="@android:color/white"
            android:textSize="12sp"
            android:alpha="0.5" />

    </LinearLayout>

    <!-- Calendar Overlay (Initially Hidden) -->
    <include
        android:id="@+id/calendar_overlay"
        layout="@layout/calender_overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />

    <!-- Bottom Navigation -->
    <LinearLayout
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:background="@color/purple_primary"
        android:orientation="horizontal"
        android:gravity="center"
        android:elevation="8dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:background="?android:attr/selectableItemBackground">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/av_booked"
                android:layout_gravity="center" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:background="?android:attr/selectableItemBackground">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/av_profile"
                android:layout_gravity="center" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>